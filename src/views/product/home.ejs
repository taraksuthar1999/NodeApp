    <table class="table table-hover w-100" id="listingTable">
        <thead>
            <tr>
                <form action="/" method="GET">
                    <th><input type="text" name="search" value="<%=Data.searchvar%>"></th>
                    <th><button type="submit" colspan="4" class="btn btn-success">Search</button></th>
                    <th><a href="/1" colspan="4" class="btn btn-success">Reset</a></th>
                </form>
            </tr>
            <tr>
                <th scope="col">ID <a href="/1?sort=id" class="btn btn-danger">Desc</a></th>
                <th scope="col">Name<a href="/1?sort=name" class="btn btn-danger">Desc</a></th>
                <th scope="col">Price<a href="/1?sort=price" class="btn btn-danger">Desc</a></th>
                <th>Discount<a href="/1?sort=discount" class="btn btn-danger">Desc</a></th>
                <th>quantity<a href="/1?sort=quantity" class="btn btn-danger">Desc</a></th>
                <th>Discription</th>
                <th>Image</th>
                <th>Status</th>
                <th>Update</th>
                <th>Delete</th>
                <th><a href="/1" class="btn btn-danger">Reset</a></th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
    <div id="app">
    </div>
    <script>
        let products=<%-JSON.stringify(Data.products)%>     
        function changePage(page)
        {        
            $("#listingTable").find("tbody").html("");
            for (var i = 0; i < products.length; i++) {
                let status={class:"btn btn-success",text:"Enable"};if(products[i].status==0){
                            status = {class:"btn btn-danger",text:"Disable"}
                }
                
                $("#listingTable").find("tbody").append(`<tr><td>${products[i].id}</td><td>${products[i].name}</td><td>${products[i].price}</td><td>${products[i].discount}</td><td>${products[i].quantity}</td><td>${products[i].discription}</td><td><img src="images/uploads/${products[i].image}" style="max-height:75px;width:130px;" alt="image" ></td><td><a href="/changeStatus/${products[i].id}/?status=${products[i].status}" class="${status.class}">${status.text}</a></td><td><a href='add/${products[i].id}' class='btn btn-primary'>Update</a></td><td><a href='delete/${products[i].id}' onclick="if (confirm('Sure you wanna delete this item?')){return true;}else{event.stopPropagation(); event.preventDefault();};" class='btn btn-danger'>Delete</a></td><td><a href='view/${products[i].id}' class='btn btn-warning'>View</a></td></tr>`)
            }
        }
    
    
        window.onload = function() {
            changePage(1);
        };
    </script>
<script>

    let pages = <%-JSON.stringify(Data.pages)%>
