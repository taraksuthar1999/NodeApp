  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["src/@types", "node_modules/@types"]
  }
